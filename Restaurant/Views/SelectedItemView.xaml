<UserControl x:Class="Restaurant.Views.SelectedItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Column="1"
            Grid.Row="0"
            TextAlignment="Center"
            VerticalAlignment="Center"
            Text="Стока"/>
        <TextBlock
            Grid.Column="2"
            Grid.Row="0"
            TextAlignment="Center"
            VerticalAlignment="Center"
            Text="Количество"/>
        <TextBlock
            Grid.Column="3"
            Grid.Row="0"
            TextAlignment="Center"
            VerticalAlignment="Center"
            Text="Цена"/>
        <ListBox
            Grid.ColumnSpan="5"
            Grid.Row="1"
            Height="250"
            Width="350"
            VerticalAlignment="Top"
            ItemsSource="{Binding Items}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button
                            Grid.Column="0"
                            Grid.Row="0"
                            BorderThickness="0"
                            Background="Transparent"
                            Cursor="Hand"
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Left">
                            <Image
                                Source="C:\Users\yoanna.krasteva\source\repos\Restaurant2\Restaurant\Images\plus.png"/>
                        </Button>
                        <TextBlock
                            Grid.Column="1"
                            Grid.Row="0"
                            TextWrapping="Wrap"
                            Text="{Binding Item.Name}"/>
                        <TextBox
                            Grid.Column="2"
                            Grid.Row="0"
                            Width="30"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            MaxLength="4"
                            Text="{Binding Count,UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock
                            Grid.Column="3"
                            Grid.Row="0"
                            TextAlignment="Center"
                            Width="60"
                            Text="{Binding Total}"/>
                        <Button
                            Grid.Column="4"
                            Grid.Row="0"
                            Content="X"
                            BorderBrush="Transparent"
                            Background="Transparent"/>
                        <ListBox
                            Grid.ColumnSpan="5"
                            Grid.Row="1"
                            Width="330"
                            Margin="40,0,0,0"
                            BorderThickness="0"
                            Visibility="Visible"
                            ItemsSource="{Binding Extras}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            TextWrapping="Wrap"
                                            Text="{Binding Item.Name}"/>
                                        <TextBox
                                            Grid.Column="1"
                                            Width="30"
                                            TextAlignment="Center"
                                            VerticalAlignment="Center"
                                            MaxLength="4"
                                            Text="{Binding Count,UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock
                                            Grid.Column="2"
                                            TextAlignment="Center"
                                            Width="60"
                                            Text="{Binding Total}"/>
                                        <Button
                                            Grid.Column="3"
                                            Content="X"
                                            BorderBrush="Transparent"
                                            Background="Transparent"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
