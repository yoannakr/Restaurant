<Window x:Class="Restaurant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant"
        xmlns:vm="clr-namespace:Restaurant.ViewModels"
        xmlns:v="clr-namespace:Restaurant.Views"
        mc:Ignorable="d"
        Title="Майстор Ицо" MinHeight="450" MinWidth="800" MaxHeight="450" MaxWidth="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <v:LoginView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentPresenter
            Content="{Binding BaseViewModel}"/>
    </Grid>
</Window>
